<?xml version="1.0" encoding="UTF-8"?>

<action-recipes>
        
        <!-- start/stop environments -->
        <snippet id="actions.snippets.context.startstop" category="tools.Snippets">
            <title>start/stop environment</title>
            <text>
\\start${1:text}

$0

\\stop${1/(\w*)(.*\n*)*/$1/}</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>env</text-trigger>
        </snippet>
        
<!--  define -->
        <snippet id="actions.snippets.context.define" category="tools.Snippets">
            <title>new definition</title>
            <text>\\define[${1:args}]\\${2:newmacro}\{$3\}
$4</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>def</text-trigger>
        </snippet>
        
<!--  setup -->
        
        <snippet id="actions.snippets.context.setup1" category="tools.Snippets">
            <title>setup 1 arguments</title>
            <text>\\setup$1[${2:first}]
$3</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>set1</text-trigger>
        </snippet>
        
        <snippet id="actions.snippets.context.setup2" category="tools.Snippets">
            <title>setup 2 argument</title>
            <text>\\setup$1[${2:first}][${3:second}]
$4</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>set2</text-trigger>
        </snippet>
        
        <snippet id="actions.snippets.context.setup3" category="tools.Snippets">
            <title>setup 3 arguments</title>
            <text>\\setup$1[${2:first}][${3:second}][${4:third}]
$5</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>set3</text-trigger>
        </snippet>
        
        <snippet id="actions.snippets.context.setup4" category="tools.Snippets">
            <title>setup 4 arguments</title>
            <text>\\setup$1[${2:first}][${3:second}][${4:third}][${5:fourth}]
$6</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>set4</text-trigger>
        </snippet>
        
        <snippet id="actions.snippets.context.setup5" category="tools.Snippets">
            <title>setup 5 arguments</title>
            <text>\\setup$1[${2:first}][${3:second}][${4:third}][${5:fourth}][${6:fifth}]
$7</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>set5</text-trigger>
        </snippet>
        
        <snippet id="actions.snippets.context.setup6" category="tools.Snippets">
            <title>setup 6 arguments</title>
            <text>\\setup$1[${2:first}][${3:second}][${4:third}][${5:fourth}][${6:fifth}][${7:fifth}]
$8</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>set6</text-trigger>
        </snippet>

</action-recipes>