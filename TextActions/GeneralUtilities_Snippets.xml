<?xml version="1.0" encoding="UTF-8"?>

<action-recipes>
        
        <!-- start/stop environments -->
        <snippet id="actions.snippets.context.startstop" category="tools.Snippets">
            <title>start/stop environment</title>
            <text>
\\start${1:text}

$0

\\stop${1/(\w*)(.*\n*)*/$1/}</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>env</text-trigger>
        </snippet>
        
        <!--  define -->
        <snippet id="actions.snippets.context.define" category="tools.Snippets">
            <title>new definition</title>
            <text>\\define[${1:args}]\\${2:newmacro}\{$3\}
$4</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>def</text-trigger>
        </snippet>
        
        <!--  define -->
        <snippet id="actions.snippets.context.setup" category="tools.Snippets">
            <title>new setup</title>
            <text>\\setup$1[${2:first}][${3:second}]${4:[${5:third}]}
$6</text>
            <syntax-context>language-root.context, language-root.context *</syntax-context>
            <text-trigger>set</text-trigger>
        </snippet>

</action-recipes>