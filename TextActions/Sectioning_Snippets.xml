	<snippet id="actions.snippets.context.sectioning.starttitle" category="actions.snippets.context/actions.snippets.context.sectioning">
        <title>new title</title>
		<text>
\\starttitle[title={${1:placeholder}},
            bookmark={${2:$1}},
            list={${3:$1}},
            marking={${4:$1}},
            reference={${5:$1}}]

$6

\\stoptitle</text>
        <syntax-context>structural.container.document,structural.container.document *</syntax-context>
        <text-trigger>title</text-trigger>
    </snippet>

