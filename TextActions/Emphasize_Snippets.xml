<?xml version="1.0" encoding="UTF-8"?>

<action-recipes>

    <snippet id="actions.snippets.context.emphasize.italic" category="actions.snippets.context/actions.snippets.context.emphasize">
        <title>italic</title>
        <text>\{\\it ${EDITOR_SELECTION:you have to select text first!}\}</text>
        <syntax-context>language-root.context *</syntax-context>
        <key-equivalent>cmd option i</key-equivalent>
    </snippet>
    
    <snippet id="actions.snippets.context.emphasize.em" category="actions.snippets.context/actions.snippets.context.emphasize">
